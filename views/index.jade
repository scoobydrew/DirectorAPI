extends layout

block content
    h1= title
    p Welcome to the directors API testing playground!!

    // Wrapper
    #wrapper
        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='dirName'></span>
                br
                strong Age:
                |  <span id='dirDOB'></span>
                br
                strong Favorite Camera:
                |  <span id='dirFavoriteCam'></span>
                br
                strong Favorite Movies:
                |  <span id='dirMovies'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th DOB
                    th Delete?
                tbody
        // /USER LIST
        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputLivestreamId(type='text', placeholder='Livestream ID')
                br
                button#btnTest Add User
        // /ADD USER
    // /WRAPPER